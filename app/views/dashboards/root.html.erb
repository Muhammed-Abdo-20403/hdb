<div id="main-content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-6 col-md-8 col-sm-12">
                    <h2><a href="javascript:void(0);" class="btn btn-xs btn-link btn-toggle-fullwidth"><i class="fa fa-arrow-left"></i></a>Dashboard</h2>
                </div> 
            </div>
        </div>

        <div class="row clearfix">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="card text-center bg-info">
                        <div class="body">
                            <div class="p-15 text-light">
                                <h3><%= @count_cases %></h3>
                                <span>Total Cases IN Egypt</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="card text-center bg-secondary">
                        <div class="body">
                            <div class="p-15 text-light">
                                <h3><%= @count_govermorates %></h3>
                                <span>Egypt Governorates</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="card text-center bg-warning">
                        <div class="body">
                            <div class="p-15 text-light">
                                <h3><%= @count_diseases %></h3>
                                <span>Total Diseases IN Egypt</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="card text-center bg-dark">
                        <div class="body">
                            <div class="p-15 text-light">
                                <h3><%= @coun_cities %></h3>
                                <span>Egypt Cities</span>
                            </div>
                        </div>
                    </div>
                </div>                
            </div>

        <div class="row clearfix">
            <div class="col-lg-7 col-md-12">
                <div class="card">
                    <div class="header">
                        <h2>Most 5 Spread Cities For Diseases</h2>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table class="table table-hover m-b-0">
                                <thead>
                                    <tr>
                                        <th>City Name</th>
                                        <th>Disease Name</th>
                                        <th>Cases</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @most_5_spread_cities_for_diseases.map do |row| %>
                                        <tr>
                                            <td>
                                                <h6 class="margin-0"><%= row.city_name %></h6>
                                                <span>In <%= row.governorate_name %></span>
                                            </td>
                                            <td>
                                                <h6 class="m-b-0"><%= row.disease_name %></h6>
                                                <% if row.contagious = true %>
                                                    <span class="text-muted"> 
                                                        Is Contagious
                                                    </span>
                                                <% else %>
                                                    <span class="text-muted"> 
                                                        Not Contagious 
                                                    </span>
                                                <% end %>
                                            </td>
                                            <td class="text-right">
                                                <h6 class="m-b-0"><%= row.count_diseases %></h6>
                                                
                                            </td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-md-6">
                 <div class="card">
                    <div class="header">
                        <h2>Most 8 Diseases Spread In Egypt</h2>
                    </div>
                    <div class="body">
                        <ul class=" list-unstyled basic-list">
                            <% @most_8_diseases.map do |row| %>
                                <li>
                                    <i class="fa fa-ticket m-r-5"></i> 
                                    <%= row.name %>
                                    <% if row.dcount <= 500 %> 
                                        <span class="badge badge-warning"> 
                                            <%= row.dcount %>
                                        </span>
                                    <% else %>
                                        <span class="badge badge-danger"> 
                                            <%= row.dcount %>
                                        </span>
                                    <% end %>
                                </li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>  
        </div>

        <div class="row clearfix">
            <div class="col-xl-4 col-lg-12 col-md-12">
                <div class="card">
                    <div class="header">
                        <h2>Most Cities Have Patients</h2>                            
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table class="table table-hover m-b-0">
                                <tbody>
                                    <% @most_cities_have_patients.map do |row| %>
                                        <tr>
                                            <td>
                                                <h6 class="m-b-0"><%= row.count_patients %></h6>
                                            </td>
                                            <td>
                                                <h6 class="margin-0"><%= row.name_cities %></h6>
                                            </td>
                                            <td>
                                                <h6 class="margin-0"><%= row.name_governorate %></h6>
                                            </td> 
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div> 
            <div class="col-lg-8 col-md-12">
                <div class="card">
                    <div class="header">
                        <h2>Coronavirus infection rate</h2>
                        <ul class="header-dropdown">
                            <li><a class="tab_btn" href="javascript:void(0);" data-toggle="tooltip" data-placement="top" title="Weekly">W</a></li>
                            <li><a class="tab_btn" href="javascript:void(0);" data-toggle="tooltip" data-placement="top" title="Monthly">M</a></li>
                            <li><a class="tab_btn active" href="javascript:void(0);" data-toggle="tooltip" data-placement="top" title="Yearly">Y</a></li>
                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"></a>
                                <ul class="dropdown-menu dropdown-menu-right animated bounceIn">
                                    <li><a href="javascript:void(0);">Action</a></li>
                                    <li><a href="javascript:void(0);">Another Action</a></li>
                                    <li><a href="javascript:void(0);">Something else</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="body">                            
                        <div id="total_Salary" class="ct-chart"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8 col-md-7">
                <div class="card">
                    <div class="header">
                        <h2>most disease spread in hospital</h2>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table class="table table-hover m-b-0">
                                <thead class="thead-dark">
                                    <tr>
                                    <th>Hospital Name</th>
                                    <th>Disease Name</th>
                                    <th>Sevrity</th>
                                    <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @most_disease_spread_in_hospital.map do |row| %>
                                        <tr>
                                            <td><%= row.hospital_name %></td>
                                            <td><span><%= row.disease_name %></span></td>
                                            <% if row.ct_cases <= 16 %>
                                                <td><span class="badge badge-success">Good</span></td>
                                            <% else %>
                                                <td><span class="badge badge-danger">Bad</span></td>
                                            <% end %>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12">
                    <div class="card top_counter">
                        <div class="body">
                            <div class="icon"><i class="fa fa-users"></i> </div>
                            <div class="content">
                                <div class="text">Male Patients</div>
                                <h5 class="number"><%= @male_patients.count %></h5>
                            </div>
                            <hr>
                            <div class="icon"><i class="fa fa-users"></i> </div>
                            <div class="content">
                                <div class="text">Female Patients</div>
                                <h5 class="number"><%= @female_patients.count %></h5>
                            </div>
                        </div>
                    </div>
                    <div class="card top_counter">
                        <div class="body">
                            <div class="icon"><i class="fa fa-university"></i> </div>
                            <div class="content">
                                <div class="text">Hospitals</div>
                                <h5 class="number"><%= @count_hospitals %></h5>
                            </div>
                            <hr>
                            <div class="icon"><i class="fa fa-university"></i> </div>
                            <div class="content">
                                <div class="text">Private Hospitals</div>
                                <h5 class="number"><%= @private_hospitals.count %></h5>
                            </div>
                            <hr>
                            <div class="icon"><i class="fa fa-university"></i> </div>
                            <div class="content">
                                <div class="text">Private Hospitals</div>
                                <h5 class="number"><%= @private_hospitals.count %></h5>
                            </div>
                        </div>
                    </div>
                </div>                
        </div>
    </div>
</div>